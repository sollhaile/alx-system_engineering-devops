#!/bin/bash
read w s <<< "$WATER $STIR"; for ((i=0;i<${#w};i++)); do a=$((a*5+$(tr 'water' '0-4' <<< ${w:i:1}))); done; for ((i=0;i<${#s};i++)); do b=$((b*4+$(tr 'stir' '0-3' <<< ${s:i:1}))); done; c=$((a+b)); while ((c>0)); do d=$(($c%8)); e=$(tr '0-7' 'bestchol' <<< $d)$e; c=$(($c/8)); done; echo $e
