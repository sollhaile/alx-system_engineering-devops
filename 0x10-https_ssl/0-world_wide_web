#!/usr/bin/env bash
# Displays DNS information for specified domain and subdomains

get_dns_info() {
    local domain=$1
    local subdomain=$2
    local result
    
    result=$(dig "$subdomain.$domain" +short)
    if [ -n "$result" ]; then
        echo "The subdomain $subdomain is a A record and points to $result"
    fi
}

main() {
    local domain=$1
    local subdomain=$2
    
    if [ -z "$subdomain" ]; then
        get_dns_info "$domain" "www"
        get_dns_info "$domain" "lb-01"
        get_dns_info "$domain" "web-01"
        get_dns_info "$domain" "web-02"
    else
        get_dns_info "$domain" "$subdomain"
    fi
}

main "$@"
