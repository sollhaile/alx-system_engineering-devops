# 1. Install UFW (Uncomplicated Firewall)
sudo apt update
sudo apt install ufw -y

# 2. Reset UFW to default (optional but recommended for clean config)
sudo ufw --force reset

# 3. Block all incoming traffic by default
sudo ufw default deny incoming

# 4. Allow all outgoing traffic (optional, but usually desired)
sudo ufw default allow outgoing

# 5. Allow SSH (port 22)
sudo ufw allow 22/tcp

# 6. Allow HTTP (port 80)
sudo ufw allow 80/tcp

# 7. Allow HTTPS (port 443)
sudo ufw allow 443/tcp

# 8. Enable the firewall
sudo ufw --force enable

# 9. Check the firewall status (for verification)
sudo ufw status verbose
